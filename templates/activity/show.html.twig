{% extends 'base.html.twig' %}

{% block title %}Activity{% endblock %}

{% block body %}
    <h1>Activity</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ activity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ activity.name }}</td>
            </tr>
            <tr>
                <th>StartAt</th>
                <td>{{ activity.startAt ? activity.startAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>EndAt</th>
                <td>{{ activity.endAt ? activity.endAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>AgeRequire</th>
                <td>{{ activity.AgeRequire }}</td>
            </tr>
            <tr>
                <th>MaximumPeople</th>
                <td>{{ activity.maximumPeople }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('activity_index') }}">back to list</a>

    <a href="{{ path('activity_edit', {'id': activity.id}) }}">edit</a>

    {{ include('activity/_delete_form.html.twig') }}
{% endblock %}
